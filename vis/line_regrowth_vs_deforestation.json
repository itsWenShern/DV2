{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Forest Disturbances vs. Regrowth in Malaysia (2014â€“2024)",
    "font": "Times New Roman",
    "fontSize": 16
  },  
  "data": {
    "url": "https://raw.githubusercontent.com/itsWenShern/DV2/refs/heads/main/data/JRC_TMF_EvolutionChanges_1990_2024_vMarch2025.csv"
  },
  "width": "container",
  "height": 350,
  "transform": [
    {"filter": "datum.Country == 'Malaysia'"},
    {
      "filter": "datum.Year >= 2014 && datum.Year <= 2024"
    },
    {
      "fold": [
        "Total forest disturbances (degradation or deforestation)",
        "Forest regrowth"
      ],
      "as": ["Metric_long", "Area"]
    },
    {
      "calculate": "datum.Metric_long == 'Total forest disturbances (degradation or deforestation)' ? 'Total Degradation/Deforestation' : datum.Metric_long",
      "as": "Metric"
    }
  ],
  "layer": [
    {
      "mark": {"type": "line", "point": true},
      "encoding": {
        "x": {"field": "Year", "type": "ordinal", 
        "axis": {
                "title": "Year",
                "titleFontSize": 16
              }
            },
        "y": {
          "field": "Area",
          "type": "quantitative",
          "scale": {"domain": [0, 0.55]},
          "axis": {
            "title": "Area (Mha)", 
            "titleFontSize": 16,
            "grid": false
          }
        },
        "color": {
          "field": "Metric",
          "type": "nominal",
          "title": "Forest Change Type",
          "scale": {
            "domain": [
              "Forest regrowth",
              "Total Degradation/Deforestation"
            ],
            "range": ["green", "darkblue"]
          },
          "legend": null
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {"field": "Area", "type": "quantitative", "format": ".3f", "title": "Area (Mha)"}
        ]
      }
    },
    {
      "data": {"values": [{"Year": "2020"}]},
      "mark": {"type": "rule", "strokeDash": [4, 4], "color": "brown"},
      "encoding": {"x": {"field": "Year", "type": "ordinal"}}
    },
    {
      "data": {"values": [{"Year": "2020"}]},
      "mark": {
        "type": "text",
        "text": "Covid-19 Impact",
        "align": "left",
        "baseline": "top",
        "dx": 5,
        "dy": -345,
        "color": "brown",
        "fontSize": 12
      },
      "encoding": {"x": {"field": "Year", "type": "ordinal"}, "y": {"datum": 0}}
    }
  ]
}